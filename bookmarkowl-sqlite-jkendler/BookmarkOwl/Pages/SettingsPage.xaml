<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookmarkOwl.Pages.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout>
        <Label Text="Url" />
        <Entry Text="{Binding Url}"/>

        <Label Text="Token"/>
        <Entry Text="{Binding Token}"/>


        <Button Text="Save" Command="{Binding SaveSettingsCommand}"/>
        <Button Text="Clear" Command="{Binding DeleteSettingsCommand}"/>
    </VerticalStackLayout>


</ContentPage>
